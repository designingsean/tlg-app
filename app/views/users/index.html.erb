<div class="row">
  <div class="col-sm-12">
    <%= form_for :user, html: { class: "form-inline" } do |f| %>
      <div class="input-group">
        <%= f.text_field :name, :class => "form-control" %>
        <span class="input-group-btn">
          <%= f.button "Add Employee", class: "btn btn-default" %>
        </span>
      </div>
    <% end %>
  </div>
</div>
<div class="row">
  <div class="col-sm-5">
    <h2>Active Employees</h2>
    <table class="table table-striped table-hover">
      <tbody>
        <% @active_users.each do |user| %>
          <tr>
            <td width="80%"><%= user.name %></td>
            <td width="20%"><%= link_to 'Deactivate', edit_user_path(user) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="col-sm-5 col-sm-offset-2">
    <h2>Inactive Employees</h2>
    <table class="table table-striped table-hover">
      <tbody>
        <% @inactive_users.each do |user| %>
          <tr>
            <td width="80%"><%= user.name %></td>
            <td width="20%"><%= link_to 'Activate', edit_user_path(user) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>