<%= render partial: "users" %>
<div class="row">
    <div class="col-sm-12">
      <%= form_for :clock, html: { class: "form-inline" } do |f| %>
        <div class="form-group">
          <%= f.date_field :date, :class => "form-control" %>
        </div>
        <div class="form-group">
          <%= f.time_field :in, :class => "form-control" %>
        </div>
        <div class="form-group">
          <%= f.time_field :out, :class => "form-control" %>
        </div>
        <%= f.button "Add", class: "btn btn-default" %>
      <% end %>
      <%= render partial: "edit_period", locals: { time: 'Current', period: @current_period } %>
    </div>
</div>