<div class="row">
  <div class="col-sm-12">
    <div class="btn-group">
      <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
        Who are you? <span class="caret"></span>
      </button>
      <ul class="dropdown-menu" role="menu">
        <% @active_users.each do |user| %>
          <li><%= link_to user.name, clock_path(user.id) %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>