<h2><%= time %> Pay Period</h2>
<p class="lead"><%= period_total(period) %> total hours</p>
<table class="table table-striped" width="400">
    <thead>
        <tr>
            <th width="24%">Date</th>
            <th width="24%">In</th>
            <th width="24%">Out</th>
            <th width="24%">Total</th>
            <th width="4%"></th>
        </tr>
    </thead>
</table>
<% period.each do |week| %>
    <table class="table table-striped" width="400">
        <thead>
            <tr>
                <th colspan="3" width="72%">Week Total</th>
                <th width="24%"><%= week.sum(:totalTime) %></th>
                <th width="4%"></th>
            </tr>
        </thead>
        <tbody>
            <% week.each do |punch| %>
            <tr>
                <td width="24%"><%= format(punch.clockIn, false) %></td>
                <td width="24%"><%= format(punch.clockIn, true) %></td>
                <td width="24%"><%= format(punch.clockOut, true) %></td>
                <td width="24%"><%= punch.totalTime %></td>
                <td width="4%"><%= link_to destroy_clock_index_path(punch.id) do %><span class="glyphicon glyphicon-remove text-danger"></span><% end %></td>
            </tr>
            <% end %>
        </tbody>
    </table>
<% end %>