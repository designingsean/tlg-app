<h2><%= time %> Pay Period</h2>
<p class="lead"><%= period_total(period) %> total hours</p>
<table class="table table-striped" width="400">
    <thead>
        <tr>
            <th width="25%">Date</th>
            <th width="25%">In</th>
            <th width="25%">Out</th>
            <th width="25%">Total</th>
        </tr>
    </thead>
</table>
<% period.each do |week| %>
    <table class="table table-striped" width="400">
        <thead>
            <tr>
                <th colspan="3" width="75%">Week Total</th>
                <th width="25%"><%= week.sum(:totalTime) %></th>
            </tr>
        </thead>
        <tbody>
            <% week.each do |punch| %>
            <tr>
                <td width="25%"><%= format(punch.clockIn, false) %></td>
                <td width="25%"><%= format(punch.clockIn, true) %></td>
                <td width="25%"><%= format(punch.clockOut, true) %></td>
                <td width="25%"><%= punch.totalTime %></td>
            </tr>
            <% end %>
        </tbody>
    </table>
<% end %>